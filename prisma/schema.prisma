generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PRO
  ENTERPRISE
}

enum FinancialTransactionType {
  INCOME
  EXPENSE
}

enum AiChatRole {
  USER
  ASSISTANT
}

model Company {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  currency    String   @default("BRL")
  timezone    String   @default("America/Sao_Paulo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users    User[]
  sales    Sale[]
  adSpends AdSpend[]
  financialTransactions FinancialTransaction[]
  aiChatMessages       AiChatMessage[]
}

model AdSpend {
  id        String   @id @default(cuid())
  companyId String
  amount    Decimal  @db.Decimal(12, 2)
  spentAt   DateTime
  source    String   @default("meta")
  metadata  Json?
  createdAt DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([companyId, spentAt])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  plan      Plan     @default(FREE)
  detailLevel String @default("medium")
  name      String?
  companyId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company              Company?               @relation(fields: [companyId], references: [id], onDelete: Cascade)
  sales                Sale[]
  analyses             Analysis[]
  financialTransactions FinancialTransaction[]
  aiChatMessages       AiChatMessage[]
}

// Canal de origem da venda. manual = criada pelo usuário; shopify/meta = futuros webhooks.
enum SaleChannel {
  manual
  shopify
  meta
}

model Sale {
  id          String      @id @default(cuid())
  userId      String?
  companyId   String
  amount      Decimal     @db.Decimal(12, 2)
  productName String?     // Nome do produto (ou use category para agrupamento)
  category    String?     // Categoria opcional para agrupamento no dashboard
  channel     SaleChannel @default(manual) // manual | shopify | meta
  occurredAt  DateTime    // Timestamp real da venda (não o created_at)
  createdAt   DateTime    @default(now())

  user    User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, occurredAt])
  @@index([companyId])
  @@index([companyId, occurredAt])
}

model Analysis {
  id        String   @id @default(uuid())
  content   String
  userId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, createdAt])
}

model FinancialTransaction {
  id          String                   @id @default(cuid())
  companyId   String
  userId      String
  type        FinancialTransactionType
  amount      Decimal                  @db.Decimal(12, 2)
  description String
  category    String?
  occurredAt  DateTime
  createdAt   DateTime                 @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([companyId])
  @@index([userId])
  @@index([occurredAt])
  @@index([companyId, occurredAt])
}

model AiChatMessage {
  id         String    @id @default(cuid())
  userId     String
  companyId  String
  role       AiChatRole
  content    String
  tokensUsed Int?
  createdAt  DateTime  @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([companyId])
  @@index([createdAt])
}
